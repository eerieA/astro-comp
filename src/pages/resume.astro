---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageSection from "../components/PageSection.astro";

import { marked } from "marked";
import resumeMarkdown from "../content/resume.md?raw";
const md = marked.parse(resumeMarkdown);
// const md = marked.parse('# Marked in the browser\n\nRendered by **marked**.');
---

<BaseLayout title="Resume" currentPage="resume">
    <PageSection title="Resume">
        <div class="max-h-[calc(70vh-10rem)] lg:max-h-[calc(92vh-10rem)] overflow-y-auto">
            <article
                class="prose max-w-none prose-sm prose-sky prose-p:leading-5 prose-ul:leading-5"
                set:html={md}
            />
        </div>
    </PageSection>
</BaseLayout>
