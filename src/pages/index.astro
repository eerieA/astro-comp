---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";

import gitpeekThumb from "../assets/thumbnails/400x300.png";
import habitThumb from "../assets/thumbnails/400x300.png";

const projects = [
	{
		title: "Git Peek",
		img: gitpeekThumb,
		link: "https://github.com/eerieA/gitpeek-lang",
	},
	{ title: "Habit Tracker", img: habitThumb, link: "#" },
];
---

<BaseLayout title="Projects | Jade Duan" currentPage="home">
	<h1>Projects</h1>
	<div class="grid">
		{projects.map((project) => <ProjectCard {...project} />)}
	</div>
</BaseLayout>
