---
import "../styles/global.css";
const { title = "Jade Duan", currentPage = "" } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>
    <body>
        <header>
            <nav>
                <a href="/" class={currentPage === "home" ? "active" : ""}
                    >Home</a
                >
                <a
                    href="/resume"
                    class={currentPage === "resume" ? "active" : ""}>Resume</a
                >
                <a
                    href="/socials"
                    class={currentPage === "socials" ? "active" : ""}>Socials</a
                >
            </nav>
        </header>
        <main>
            <slot />
        </main>
    </body>
</html>
