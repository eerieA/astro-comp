---
const { title, videoSrc, link, description } = Astro.props;
---

<div
    class="flex gap-2 bg-white shadow-xs hover:shadow-sm transition-shadow border-l-4 border-primary-hovered"
>
    <!-- Left: Video thumbnail -->
    <video
        src={videoSrc}
        controls
        class="w-48 h-32 object-cover flex-shrink-0"
        muted
        loop
        playsinline></video>

    <!-- Right: Text content -->
    <div class="w-full p-1 flex flex-col">
        <!-- Title row with button -->
        <div class="mb-1 flex justify-between items-center">
            <h3 class="text-primary-active text-sm">{title}</h3>
            <a
                href={link}
                target="_blank"
                class="text-sm bg-white text-primary hover:text-primary-hovered"
            >
                Repo
            </a>
        </div>
        <p class="text-sm italic text-primary-hovered">{description}</p>
    </div>
</div>
